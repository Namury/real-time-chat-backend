generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @unique @default(autoincrement())
  uuid     String @unique @default(uuid())
  password String
  username String @unique

  @@id([id, uuid])
}

model Room {
  id   Int    @unique @default(autoincrement())
  uuid String @unique @default(uuid())
  name String @unique

  @@id([id, uuid])
}
